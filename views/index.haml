#left
	-[:today, :yesterday, :earlier].each do |section|
		-next if $content[section].length == 0
		%h2 
			= section.to_s.capitalize
		%ul.archive
			-$content[section].each do |post|
				%li
					.post-title
						%strong <a href="#{post[:url]}">#{post[:title]}</a>
						-if post[:guid]
							<a href="#{post[:guid]}"> &#x2612 </a>
					-unless post[:description].nil?
						.post-details	
							= post[:description]

#right
	.sidemenu
		%form#quick-search{:action => "index.html", :method => "get"}
			%p
				%label{:for => "qsearch"}Search:
				%input.tbox#qsearch{:type => "text", :name => "qsearch", :value => "type and hit enter...", :title => "Start typing and hit ENTER"}
				%input.btn{:alt=>"Search", :type=>"image", :name=>"searchsubmit", :title=>"Search", :src=>"images/search.gif"}
		%form
			<input type="text" name="firstname" size=30 />
			<textarea rows = 10, cols = 27></textarea>
			<button class="button">Add Item</button><br>
